<div class="container">
    <div class="row">
        <div class="loginPanel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Giriş Paneli</div>
                </div>
            
                <div class="panel-body">
                    <form action="/login" method="post">
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="username" class = "form-control" id="login-username" placeholder="Kullanıcı Adı">
                        </div>
    
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" name="password" class = "form-control" id="password" placeholder="Şifre">
                        </div>
                        <input type="submit" class="btn btn-primary" value="Giriş">
                        <a href="/login/signup" class="btn btn-default">Kayıt Ol</a>
                    </form>
                </div>
            
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        
                    </div>
                </div>
                <% if(typeof username != 'undefined'){%> 
                <h2><%=username%></h2>
                <% } %> 
                <% if(typeof password != 'undefined'){%>
                <h3><%=password%></h3>
                <% } %> 
            </div>
        </div>
    </div>
</div>

