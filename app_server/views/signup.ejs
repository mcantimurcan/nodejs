<div class="container">
    <div class="row">
        <div class="loginPanel">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Kayıt Paneli</div>
                </div>
            
                <div class="panel-body">
                    <form action="/login/signup" method="post">
                        <!--ad-->
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="ad" class = "form-control" id="login-username" placeholder="Ad">
                        </div>
                        <!--soyad-->
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="soyad" class = "form-control" id="login-username" placeholder="Soyad">
                        </div>
                        <!--email-->
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="email" class = "form-control" id="login-username" placeholder="E-mail">
                        </div>
                        <!--kullanıcı adı-->
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                            <input type="text" name="kullaniciAdi" class = "form-control" id="login-username" placeholder="Kullanıcı Adı">
                        </div>
                        <!--şifre-->
                        <div style="margin-bottom: 25px" class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                            <input type="password" name="sifre" class = "form-control" id="password" placeholder="Şifre">
                        </div>
                        <input type="submit" class="btn btn-primary" value="Kaydet">
                        <a href="/login" class="btn btn-default">Giriş Yap</a>
                    </form>
                </div>
            
                <div class="panel-footer clearfix">
                    <div class="pull-right">
                        
                    </div>
                </div>
              
            </div>
        </div>
    </div>
</div>